{
  "name": "next_blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare-assets:dev": "rm -rf public/assets && ln -s ../blog-content/assets public/assets",
    "prepare-assets:build": "rm -rf public/assets && mkdir -p public/assets && cp -r blog-content/assets/. public/assets",
    "dev": "npm run prepare-assets:dev && next dev --turbopack",
    "build": "npm run prepare-assets:build && next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "next": "15.5.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
